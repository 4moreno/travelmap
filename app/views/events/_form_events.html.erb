<%= simple_form_for @event do |f| %>
  <div class="container form-inputs form-events mb-5">
    <%= f.input :name, label: "Event name" %>
    <%= f.input :start_time, html5: true, input_wrapper_html: {style: "background-image: none; "} %>
    <%= f.input :end_time, html5: true %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.submit "Save", class: "btn-peach mb-4 w-100 mt-3" %>
  </div>
<% end %>
