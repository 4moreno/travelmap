<div class="event-wrapper mt-5">
  <h1 class="text-center">About: <%= @event.name %> </h1>
  <h2 class="text-center">Hosted by <%= cl_image_tag current_user.avatar.key, class: "avatar-host" %></h2>
  <div class="border event-details-wrapper">
    <p><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-calendar-event" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <rect x="4" y="5" width="16" height="16" rx="2" />
      <line x1="16" y1="3" x2="16" y2="7" />
      <line x1="8" y1="3" x2="8" y2="7" />
      <line x1="4" y1="11" x2="20" y2="11" />
      <rect x="8" y="15" width="2" height="2" />
    </svg> <%= @event.start_time %> to <%= @event.end_time %></p>
    <p><svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-map-pin" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <circle cx="12" cy="11" r="3" />
      <path d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z" />
    </svg> <%= @event.address %></p>
    <p>Description: <br><%= @event.description %></p>

    <p>Participants (<%= @event.attendances.count %>):</p>
    <div class="avatar-participants-wrapper">
      <% @participants.each do |participant|  %>
        <%= cl_image_tag participant.avatar.key, class: "avatar-participant" %>
      <% end %>
    </div>

    <div class="mt-auto mt-2">
      <% if policy(@event).edit? %>
        <%= link_to icon('fa-solid', 'pen-to-square'), edit_event_path(@event)%>
        <%= link_to icon('fa-solid', 'trash'), event_path(@event), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      <% end %>
      <%= link_to "LINK To Chat", chatroom_path(@event.chatroom) %>
    </div>

    <div class="text-end">
      <% attendance_for_event = current_user.attendances.find_by(event: @event) %>
      <% if attendance_for_event %>
          <%= button_to "Don't join", attendance_path(attendance_for_event), method: :delete, class:"btn-peach-outline" %>
      <% else %>
          <%= button_to "Join", event_attendances_path(@event), method: :post, class:"btn-peach" %>
      <% end %>
    </div>
  </div>
  <div class="d-flex space-between">
    <%= link_to "See all events", events_path %>
    <div class="edit-delete-wrapper">
      <% if policy(@event).edit? %>
        <%= link_to icon('fa-solid', 'pen-to-square'), edit_event_path(@event)%>
        <%= link_to icon('fa-solid', 'trash'), event_path(@event), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
</div>
