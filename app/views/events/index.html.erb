<div class="container calendar-wrapper mt-5">
  <h1 class="text-center" id="form-heading" >Calendar ðŸ“†</h1>
  <div class="filter-by-city-search mb-4 mt-3 d-flex justify-content-center">
    <%= form_with url: '/events', method: :get, class: "d-flex m-2 filter" do %>
      <%= text_field_tag :city,
        params[:city],
        class: "form-control",
        placeholder: "Filter by city"
      %>
      <%= submit_tag "Filter", class: "btn-peach w-10" %>
    <% end %>
  </div>

  <div class="calendar mb-5">
    <%= month_calendar(events: @events, end_attribute: :end_time) do |date, events| %>
      <%= date %>

      <% events.each do |event| %>
        <%= link_to event_path(event) do %>
          <div class="event">
            <p><%= event.name %></p>
            <%= render "shared/avatar_owner", event_owner: event.user %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>

