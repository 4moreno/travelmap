<div class="container chatroom" style="width: 800px"data-controller="chatroom-subscription" data-chatroom-subscription-chatroom-id-value="<%= @chatroom.id %>">
  <h1 class="mt-auto d-flex justify-content-center" id="form-heading"> <%= @chatroom.name %> <strong> - </strong>  <i class="fa-regular fa-comments"></i></h1>
  <div class="messages" data-chatroom-subscription-target="messages">
    <% @chatroom.messages.each do |message| %>
    <!--from lecture -->
        <%= render "messages/message", message: message %>
    <% end %>
  </div>
  <div>
    <%= simple_form_for [@chatroom, @message], html: {class: "d-flex", data: { action: "turbo:submit-end->chatroom-subscription#resetForm" } } do |f| %>
    <%= f.input :content, label: false, placeholder: "Write a message in #{@chatroom.name}", wrapper_html: {class: "flex-grow-1"} %>
    <%= f.submit "Send", class: "btn btn-primary mb-3" %>
    <% end %>
  </div>


</div>
