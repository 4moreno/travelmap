<h1>Posts#show</h1>
<%# Card %>
<div class="d-flex justify-content-center">
  <div class="show-card-with-map">
    <div class="p-4 rounded" >
      <img class="show-card-image" src="https://cdn.pixabay.com/photo/2016/11/18/14/39/beans-1834984_960_720.jpg" />
      <div class="show-card-infos mt-3">
        <h2 class="mb-1"><%= @post.title %></h2>
        <h3 class="mb-1"><%= @post.category %></h3>
        <h4 class="mb-3"><%= @post.address %></h4>
        <p><%= @post.description %></p>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="show-card-user avatar-bordered" />
      </div>
    </div>
  <div class="show-card-map border">
    <p>Placeholder for map</p>
  </div>
  </div>
</div>

<div>
<% bookmark_for_post = current_user.bookmarks.find_by(post: @post) %>
<% if bookmark_for_post %>
  <%= button_to bookmark_path(bookmark_for_post), method: :delete do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-bookmark"
         width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="#c24a66" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <path d="M9 4h6a2 2 0 0 1 2 2v14l-5 -3l-5 3v-14a2 2 0 0 1 2 -2" />
    </svg>
  <% end %>
<% else %>
  <%= button_to post_bookmarks_path(@post), method: :create do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-bookmark"
         width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#2c3e50" fill="none" stroke-linecap="round" stroke-linejoin="round">
      <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
      <path d="M9 4h6a2 2 0 0 1 2 2v14l-5 -3l-5 3v-14a2 2 0 0 1 2 -2" />
    </svg>
  <% end %>
<% end %>
</div>
